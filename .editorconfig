# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.json]
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[config/*.*]
indent_size = 2

[scripts/*.*]
indent_size = 2
